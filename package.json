{
  "name": "ui5-chartjs",
  "version": "0.1.0",
  "description": "Chart.js controls for OpenUI 5",
  "repository": {
    "type": "git",
    "url": "https://github.com/uia4sap/ui5-chartjs.git"
  },
  "homepage": "https://github.com/uia4sap/ui5-chartjs",
  "ui5lab": {
    "namespace": "ui5.chartjs",
    "icon": "chart",
    "displayName": "ui5-chartjs"
  },
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "prepare": "node prepare.js",
    "start": "ui5 serve --open ./test-resources/ui5lab/browser/index.html",
    "build": "rimraf dist && ui5 build",
    "release": "rimraf dist && ui5 build --exclude-task=createDebugFiles",
    "eslint": "eslint src/ui5/chartjs"
  },
  "dependencies": {
    "@openui5/sap.f": "1.58.4",
    "@openui5/sap.m": "1.58.4",
    "@openui5/sap.ui.core": "1.58.4",
    "@openui5/sap.ui.layout": "1.58.4",
    "@openui5/themelib_sap_belize": "1.58.4",
    "chart.js": "^2.9.4",
    "chartjs-plugin-crosshair": "1.1.6",
    "chartjs-plugin-datalabels": "0.7.0",
    "chartjs-plugin-zoom": "0.7.7",
    "hammerjs": "2.0.8"
  },
  "devDependencies": {
    "@ui5/cli": "^1.14.0",
    "eslint": "^5.2.0",
    "fs-extra": "^3.0.0",
    "ui5lab-browser": "1.0.0"
  }
}
